<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cjj.mynews.activity.Main2Activity"
    android:orientation="vertical">

    <!--Actionbar-->
    <include layout="@layout/custom_actionbar"></include>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_main2A"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--主布局-->
        <FrameLayout
            android:id="@+id/fl_content_main2A"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <!--侧滑菜单-->
        <LinearLayout
            android:id="@+id/dl_menu_main2A"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#fff"
            android:clickable="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_news_main2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="读新闻" />

            <Button
                android:id="@+id/bt_music_main2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="听音乐" />

            <Button
                android:id="@+id/bt_pic_main2A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="览图片" />

        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
